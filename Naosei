<audio id="player" controls></audio>

<script>
  const musicas = [
    { nome: "giletao", arquivo: "giletao.mp3" },
    { nome: "relembrando fodas", arquivo: "relembrando_fodas.mp3" },
    { nome: "estrupadora", arquivo: "estrupadora.mp3" },
    { nome: "rapariga feia fodida e acabada", arquivo: "rapariga_feia_fodida_e_acabada.mp3" },
    { nome: "mulher peidona", arquivo: "mulher_peidona.mp3" },
    { nome: "nÃ£o quisestes me dar", arquivo: "nao_quisestes_me_dar.mp3" }
  ];

  const baseURL = 'https://raw.githubusercontent.com/ChatGPT-temp-leno-brega/music/main/';
  const botoesDiv = document.getElementById('botoes');
  const player = document.getElementById('player');

  musicas.forEach(({nome, arquivo}) => {
    const btn = document.createElement('button');
    btn.textContent = nome;
    btn.onclick = () => {
      player.src = baseURL + arquivo;
      player.play();
    };
    botoesDiv.appendChild(btn);
  });
</script>

