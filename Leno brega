<body>

  <h1>Leno Brega</h1>

  <button class="btn" data-index="0">giletao</button>
  <button class="btn" data-index="1">relembrando fodas</button>
  <button class="btn" data-index="2">estrupadora</button>
  <button class="btn" data-index="3">rapariga feia fodida e acabada</button>
  <button class="btn" data-index="4">mulher peidona</button>
  <button class="btn" data-index="5">não quisestes me dar</button>

  <audio id="audio0" src="https://raw.githubusercontent.com/ChatGPT-temp-leno-brega/music/main/giletao.mp3"></audio>
  <audio id="audio1" src="https://raw.githubusercontent.com/ChatGPT-temp-leno-brega/music/main/relembrando_fodas.mp3"></audio>
  <audio id="audio2" src="https://raw.githubusercontent.com/ChatGPT-temp-leno-brega/music/main/estrupadora.mp3"></audio>
  <audio id="audio3" src="https://raw.githubusercontent.com/ChatGPT-temp-leno-brega/music/main/rapariga_feia_fodida_e_acabada.mp3"></audio>
  <audio id="audio4" src="https://raw.githubusercontent.com/ChatGPT-temp-leno-brega/music/main/mulher_peidona.mp3"></audio>
  <audio id="audio5" src="https://raw.githubusercontent.com/ChatGPT-temp-leno-brega/music/main/nao_quisestes_me_dar.mp3"></audio>

  <script>
    const buttons = document.querySelectorAll('.btn');
    const audios = Array.from(document.querySelectorAll('audio'));

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const index = btn.getAttribute('data-index');
        const audio = audios[index];

        if (audio.paused) {
          // Para todos os outros áudios
          audios.forEach(a => {
            a.pause();
            a.currentTime = 0;
          });
          audio.play();
          btn.textContent = btn.textContent.replace('▶', '').trim();
          btn.textContent = '▶ ' + btn.textContent;
        } else {
          audio.pause();
          btn.textContent = btn.textContent.replace('▶', '').trim();
        }

        // Remove '▶' dos outros botões
        buttons.forEach((b, i) => {
          if(i != index){
            b.textContent = b.textContent.replace('▶', '').trim();
          }
        });
      });
    });

    // Quando o áudio termina, remove o '▶' do botão
    audios.forEach((audio, i) => {
      audio.addEventListener('ended', () => {
        buttons[i].textContent = buttons[i].textContent.replace('▶', '').trim();
      });
    });
  </script>

</body>
